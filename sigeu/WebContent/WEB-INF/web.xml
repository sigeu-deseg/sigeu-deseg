<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>sigeu</display-name>
	<welcome-file-list>
		<welcome-file>restrito/Home.xhtml</welcome-file>
	</welcome-file-list>
	<!-- resource-env-ref>
		<resource-env-ref-name>BeanManager</resource-env-ref-name>
			<resource-env-ref-type>
				javax.enterprise.inject.spi.BeanManager
			</resource-env-ref-type>
	</resource-env-ref -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>LogoffServlet</servlet-name>
		<servlet-class>br.edu.utfpr.dv.sigeu.servlet.LogoffServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StartupServlet</servlet-name>
		<servlet-class>br.edu.utfpr.dv.sigeu.servlet.StartupServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoffServlet</servlet-name>
		<url-pattern>/Logoff</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>br.edu.utfpr.dv.sigeu.util.LoginFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AdminFilter</filter-name>
		<filter-class>br.edu.utfpr.dv.sigeu.util.AdminFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/restrito/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AdminFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<context-param>
		<param-name>facelets.SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.UPLOADER</param-name>
		<param-value>native</param-value>
	</context-param>
	<!-- <cont ext-param> <para m-name>primefaces.THEME</param-name> <pa ram-value>sam</param-value> 
		</co ntext-param> -->
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>
</web-app>